{
  "files.exclude": {
    ".vscode": true,
    "**/.cache": true,
    "**/*.{exe,dSYM}": true,
    "**/compile_commands.json": true
  },
  "files.associations": {
    "*.h": "c",
    ".clangd": "yaml"
  },
  "C_Cpp.default.includePath": [
    "${workspaceFolder}/src/**"
  ],
  "C_Cpp.default.cStandard": "c99",
  "c-cpp-flylint.standard": [
    "c99",
    "c++98"
  ],
  "c-cpp-flylint.clang.extraArgs": [
    "--enable-config"
  ],
  "sonarlint.pathToCompileCommands": "${workspaceFolder}/compile_commands.json"
}
