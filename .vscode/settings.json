{
  "files.exclude": {
    ".vscode": true,
    "src/.cache": true,
    "**/*.dSYM": true,
    "**/*.{o,d,bc,i,s,exe,a,lib,so,dll,dylib}": true,
  },
  "files.associations": {
    "*.h": "c",
    ".clangd": "yaml"
  },
  "clangd.arguments": [
    "-log=verbose",
    "-pretty",
    "--background-index",
    "--enable-config"
  ],
  "C_Cpp.default.includePath": [
    "${workspaceFolder}/src/**"
  ],
  "C_Cpp.default.cStandard": "c99",
  "c-cpp-flylint.standard": [
    "c99",
    "c++98"
  ],
  "c-cpp-flylint.clang.extraArgs": [
    "--enable-config"
  ],
  "sonarlint.pathToCompileCommands": "${workspaceFolder}/compile_commands.json",
}
